# 开发中模式 - 设为 true 时其他页面会显示"正在开发中"
MAINTENANCE_MODE=false

# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OAuth 配置 (在 Supabase Dashboard > Authentication > Providers 中设置)
# Google OAuth: 需要在 Google Cloud Console 创建凭据
# GitHub OAuth: 需要在 GitHub Developer Settings 创建 OAuth App
# 重定向 URL: your-site-url/auth/callback

# OpenRouter API for AI prompt enhancement
OPENROUTER_API_KEY=your-openrouter-api-key

# APICore AI 图像生成
NEXT_PUBLIC_APICORE_TOKEN=your-apicore-token
NEXT_PUBLIC_USE_MOCK_IMAGES=true

# 网站配置
NEXT_PUBLIC_SITE_URL=http://localhost:3000
